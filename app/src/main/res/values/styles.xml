<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/sub_color</item>
        <item name="colorAccent">@color/point_color</item>

    </style>

    <style name="under_bar_button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@color/main_color</item>
        <item name="fontFamily">@font/bm_ttf</item>
        <item name="android:textSize">25sp</item>
    </style>


    <style name="button_1">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@color/sub_color</item>
<!--        <item name="fontFamily">@font/pfstardust</item>-->
        <item name="fontFamily">@font/netmarble</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft"> 50dp </item>
        <item name="android:layout_marginRight"> 50dp </item>
        <item name="android:layout_height"> 80dp </item>
    </style>

    <style name="font_title">
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/netmarble</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft"> 20dp </item>
        <item name="android:layout_marginTop"> 20dp </item>
    </style>

    <style name="font_default">
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/netmarble</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="font_default_small">
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/netmarble</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>




</resources>
